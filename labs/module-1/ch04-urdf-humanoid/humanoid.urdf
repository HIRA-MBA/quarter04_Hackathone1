<?xml version="1.0"?>
<robot name="humanoid_robot">
  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry><box size="0.3 0.2 0.4"/></geometry>
      <material name="blue"><color rgba="0.2 0.2 0.8 1"/></material>
    </visual>
    <collision><geometry><box size="0.3 0.2 0.4"/></geometry></collision>
    <inertial>
      <mass value="10.0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>

  <!-- Head -->
  <link name="head_link">
    <visual>
      <geometry><sphere radius="0.1"/></geometry>
      <material name="skin"><color rgba="0.9 0.7 0.5 1"/></material>
    </visual>
  </link>
  <joint name="head_joint" type="fixed">
    <parent link="base_link"/><child link="head_link"/>
    <origin xyz="0 0 0.3"/>
  </joint>

  <!-- Left Arm -->
  <link name="left_upper_arm">
    <visual><geometry><cylinder radius="0.03" length="0.25"/></geometry></visual>
  </link>
  <joint name="left_shoulder" type="revolute">
    <parent link="base_link"/><child link="left_upper_arm"/>
    <origin xyz="0.18 0 0.15" rpy="0 0 0"/>
    <axis xyz="1 0 0"/><limit lower="-1.57" upper="1.57" effort="50" velocity="1"/>
  </joint>

  <!-- Right Arm -->
  <link name="right_upper_arm">
    <visual><geometry><cylinder radius="0.03" length="0.25"/></geometry></visual>
  </link>
  <joint name="right_shoulder" type="revolute">
    <parent link="base_link"/><child link="right_upper_arm"/>
    <origin xyz="-0.18 0 0.15" rpy="0 0 0"/>
    <axis xyz="1 0 0"/><limit lower="-1.57" upper="1.57" effort="50" velocity="1"/>
  </joint>

  <!-- Left Leg -->
  <link name="left_thigh">
    <visual><geometry><cylinder radius="0.04" length="0.3"/></geometry></visual>
  </link>
  <joint name="left_hip" type="revolute">
    <parent link="base_link"/><child link="left_thigh"/>
    <origin xyz="0.08 0 -0.2" rpy="0 0 0"/>
    <axis xyz="1 0 0"/><limit lower="-1.57" upper="1.57" effort="100" velocity="1"/>
  </joint>

  <!-- Right Leg -->
  <link name="right_thigh">
    <visual><geometry><cylinder radius="0.04" length="0.3"/></geometry></visual>
  </link>
  <joint name="right_hip" type="revolute">
    <parent link="base_link"/><child link="right_thigh"/>
    <origin xyz="-0.08 0 -0.2" rpy="0 0 0"/>
    <axis xyz="1 0 0"/><limit lower="-1.57" upper="1.57" effort="100" velocity="1"/>
  </joint>
</robot>
